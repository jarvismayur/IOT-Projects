void setup()
{
  Serial.begin(9600);
  swSerial.begin(9600);
  m.init(); // module initialize
  m.setIntensity(15); // dot matrix intensity 0-15
}

void loop()
{
  // Read DHT11 sensor data
  int chk = DHT11.read(4);
  humidity_1 = (float)DHT11.humidity;
  temperature_1 = (float)DHT11.temperature;
  dtostrf(humidity_1, 6, 2, hum);
  dtostrf(temperature_1, 6, 2, temp);
  

  // Read analog sensor values
  rainValue = analogRead(A0);
  ldrValue = analogRead(A1);
  soilMoisture = analogRead(A2);

  // Create the text string with sensor readings
  snprintf(text, sizeof(text), "Humidity: %s %% Temp: %s C Rain: %d Light: %d Soil Moisture: %d", hum, temp, rainValue, ldrValue, soilMoisture);

  
  Serial.println();
  Serial.print("Humidity (%): ");
  Serial.println(humidity_1);

  Serial.print("Temperature (C): ");
  Serial.println(temperature_1);

  Serial.print("Rain Drop: ");
  Serial.println(rainValue);

  Serial.print("Day Light: ");
  Serial.println(ldrValue);

  Serial.print("Soil Moisture: ");
  Serial.println(soilMoisture);

  Serial.println(text);

  // Prepare data to be sent over SoftwareSerial in JSON format
  StaticJsonDocument<200> jsonDoc;
  jsonDoc["humidity"] = humidity_1;
  jsonDoc["temperature"] = temperature_1;
  jsonDoc["rainValue"] = rainValue;
  jsonDoc["ldrValue"] = ldrValue;
  jsonDoc["soilMoisture"] = soilMoisture;

  String jsonString;
  serializeJson(jsonDoc, jsonString);

  // Send JSON data over SoftwareSerial
  swSerial.println(jsonString);

  // Display the extracted characters with scrolling
  printStringWithShift(text, 100); // (text, scrolling speed)

  delay(1000); // Adjust the delay as needed to control data transmission rate
}

// Display the extracted characters with scrolling
void printCharWithShift(char c, int shift_speed)
{
  if (c < 32) return;
  c -= 32;
  memcpy_P(buffer, CH + 7 * c, 7);
  m.writeSprite(32, 0, buffer);
  m.setColumn(32 + buffer[0], 0);

  for (int i = 0; i < buffer[0] + 1; i++)
  {
    delay(shift_speed);
    m.shiftLeft(false, false);
  }
}

// Extract the characters from the text string
void printStringWithShift(char* s, int shift_speed)
{
  while (*s != 0)
  {
    printCharWithShift(*s, shift_speed);
    s++;
  }
}
